@model  Rauf_Gaming.Models.Exchange
@{
    ViewBag.Title = "Exchange";
}


    <section class="bg-image" style="background-color: rgb(53, 54, 56) !important;">
        <img src="/Content/img/Headers/About/About-Company.jpg" alt="">
        @*<div class="owl-caption">
            <div class="owl-caption-container">
                <h1 class="owl-title">Exchange Games</h1>

            </div>
        </div>*@
    </section>

<section class="bg-primary py-0">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="promo py-4">
                    <h2 class="promo-title h4 mr-4">Check out the latest games and our products. We have great prices!</h2>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-lg-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mx-auto">
                
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="name">Select The Game you want to trade</label>
                                @Html.DropDownList("ClientGameId", (List<SelectListItem>)ViewBag.Games, "Select your game", new { @class = "form-control" })

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="name">Select The Game you want to trade</label>
                                @Html.DropDownList("StoreGameId", (List<SelectListItem>)ViewBag.Games, "Select store game", new { @class = "form-control" })

                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="message">Payment</label>
                        <input type="number" class="form-control" style="color:green;" id="txtPayment" disabled/>
                        <input type="number" class="form-control border-danger"  id="txtPayment1" style="display:none;color:red;"  disabled/>
                        <small class="form-text text-muted">Please ask for stock status in game swap.</small>
                        <small class="form-text text-muted">The fact that name of the game is in system does not mean that In Stock.</small>
                    </div>

            </div>
        </div>
    </div>
</section>



