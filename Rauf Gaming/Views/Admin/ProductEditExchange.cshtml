@model Rauf_Gaming.Models.Product

@{
    ViewBag.Title = "Exchange";
}

@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.ProductId)
@using (Html.BeginForm("ExchangeEdit", "Admin", FormMethod.Post))
{
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Exchange Setting</h4>
                <p class="card-description">

                </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                
                    <div class="form-group">
                        <label for="exampleInputCity1">Actual Price</label>
                        @Html.TextBoxFor(model => model.ActualPrice, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.ActualPrice, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Discounted Price</label>
                        @Html.TextBoxFor(model => model.DiscountedPrice, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.DiscountedPrice, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Buying Price</label>
                        @Html.TextBoxFor(model => model.BuyingPrice, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.BuyingPrice, "", new { @class = "text-danger" })
                    </div>
                
                    <button id="btnUpdateBuyingPrice" type="submit" class="btn btn-success mr-2">Update</button>
                    <a href="/Admin/ExchangeList" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>

}